\usepackage[T1]{fontenc}                       % Encodage du document (OUTPUT)
\usepackage{amsmath,amssymb,amsfonts,mathrsfs} % Jeux de caracteres mathematiques
\usepackage{xspace}    %% laisse un espace adequate pour raccourci
\usepackage{layout}
